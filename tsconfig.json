{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "target": "ES6",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
